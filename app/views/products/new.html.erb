<h1>Agregar producto</h1>
<div style='width: 50%'>
    <%= form_with(model: @product, url: product_path, method: :post, local: true) do |f| %>
        <div class="mb-3">
            <%= f.label :name, "Nombre:", class: "form-label", style: "color: #3f3844;" %>
            <%= f.text_field :name, class: "form-control"  %>
        </div>
        <div class="mb-3">
            <%= f.label :description, "Descripcion:", class: "form-label", style: "color: #3f3844;" %>
            <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="field">
            <%= f.label :image, "Imagen:" %>
            <%= f.file_field :image %>
        </div>
        <div class="mb-3">
            <%= f.label :location, "Ubicacion:", class: "form-label", style: "color: #3f3844;" %>
            <%= f.text_field :location, class: "form-control"  %>
        </div>
        <div class="mb-3">
            <%= f.label :price, "Precio:", class: "form-label", style: "color: #3f3844;" %>
            <%= f.number_field :price, class: "form-control", step: 'any'  %>
        </div>
        <div class="field">
            <%= f.label :category_id, "Categoría:" %>
            <%= f.collection_select :category_id, @categories, :id, :name, { prompt: 'Selecciona una categoría' } %>
        </div>

        <div class="field">
            <%= f.label :supplier_id, "Proveedor:" %>
            <%= f.collection_select :supplier_id, @suppliers, :id,  ->(supplier) { "#{supplier.enterprise} - #{supplier.name}" }, { prompt: 'Selecciona un proveedor' } %>
        </div>
        <div class="text-center"><%= f.submit "Agregar producto" %></div>
    <% end %>
</div>