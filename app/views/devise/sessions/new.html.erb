
<div class="container" id="LoginContainer" style='margin-top: 50px'>
  <div class="row" id="LoginBox">
    <div class="col col-lg-6 col-md-4" id="imageCol">
      <div class="image-container">
        <%= image_tag("login.jpg", alt: "Cutting food", class: "cover-image")%>
      </div>
    </div>
    <div class="col col-lg-6 col-xs-12 col-sm-12 col-md-8">
      <div class="loginForm">
          <h2 id="LoginTitle">Inicio de sesión</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <div class="text-center">

                <div class="field mb-3">
                  <%= f.label :username, style: "margin-bottom: 5px;"%><br />
                  <%= f.text_field :username, autofocus: true, autocomplete: "username", style: "padding: 5px; border-radius: 9px" %>
                </div>

                <div class="field mb-3">
                  <%= f.label :password, style: "margin-bottom: 5px;"%><br />
                  <%= f.password_field :password, autocomplete: "current-password", style: "padding: 5px; border-radius: 9px" %>
                </div>

              </div>
            </div>
            <div class="buton-area text-center">
              <div class="actions">
                <%= f.submit "Iniciar sesión" %>
              </div>
            </div>
          <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

